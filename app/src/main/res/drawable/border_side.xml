<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="@color/ship_cove" />
        </shape>
    </item>

    <item
        android:start="2dp"
        android:end="2dp">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/black" />
        </shape>
    </item>

    <item
        android:top="80dp">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/black" />
        </shape>
    </item>

    <item
        android:bottom="80dp">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/black" />
        </shape>
    </item>
</layer-list>