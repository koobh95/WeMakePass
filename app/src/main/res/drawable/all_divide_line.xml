<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/mine_shaft_approx" />
        </shape>
    </item>

    <!-- top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/dove_gray_approx"
                android:centerY="0.7"
                android:endColor="@color/transparent"
                android:startColor="@color/black" />
        </shape>
    </item>

    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="@color/dove_gray_approx"
                android:centerY="0.7"
                android:endColor="@color/transparent"
                android:startColor="@color/black" />
        </shape>
    </item>
</layer-list>
