<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid
                android:color="@color/mine_shaft_approx"/>
        </shape>
    </item>


    <item
        android:top="1dp">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/black" />
        </shape>
    </item>

    <item
        android:top="1dp">
        <shape
            android:shape="rectangle">
            <stroke
                android:color="@color/transparent"
                android:width="10dp"/>
            <solid
                android:color="@color/mine_shaft_approx"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
</layer-list>