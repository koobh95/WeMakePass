<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/dove_gray_approx"/>
        </shape>
    </item>

    <item
        android:bottom="3dp">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/black" />
        </shape>
    </item>

    <item
        android:gravity="bottom">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/black"/>
        </shape>
    </item>

</layer-list>
