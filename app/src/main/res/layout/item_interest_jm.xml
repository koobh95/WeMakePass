<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:background="@drawable/bg_layout_round_item"
    android:paddingStart="12dp"
    android:paddingEnd="5dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_interest_jm_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@id/item_interest_jm_remove_button"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/item_interest_jm_remove_button"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:background="@color/transparent"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_cancel_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_interest_jm_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>