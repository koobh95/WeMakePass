<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_post_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="15sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/item_post_comment_cnt_text_view"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_post_comment_cnt_text_view"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/ship_cove"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_post_title_text_view"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_post_writer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textColor="@color/dove_gray_approx"
        android:textSize="@dimen/font_size_x_small"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_post_title_text_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_post_category_text_view"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/dove_gray_approx"
        android:textSize="@dimen/font_size_x_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_post_hit_image_view" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_post_hit_image_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:paddingTop="3dp"
        android:layout_marginEnd="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_remove_red_eye_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_post_hit_text_view"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_post_hit_text_view"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:textColor="@color/dove_gray_approx"
        android:textSize="@dimen/font_size_x_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_post_write_date_text_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_post_write_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textColor="@color/dove_gray_approx"
        android:textSize="@dimen/font_size_x_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_post_title_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>