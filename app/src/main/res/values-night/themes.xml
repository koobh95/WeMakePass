<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeMakePass" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorAccent">@color/ship_cove</item>
    </style>

    <!-- TextInputLayout 기본 테마 -->
    <style name="TextInputLayout.Theme" parent="">
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <!-- TextInputLayout 기본 테마 + 라운드 속성(25) -->
    <style name="TextInputLayout.Theme.Round25" parent="TextInputLayout.Theme">
        <item name="boxCornerRadiusTopStart">25dp</item>
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="boxCornerRadiusBottomEnd">25dp</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
    </style>

    <!-- TextInputLayout 기본 테마 + 라운드 속성(5) -->
    <style name="TextInputLayout.Theme.Round5" parent="TextInputLayout.Theme">
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
    </style>

    <style name="TabLayout.Tab.TextAppearance.Large" parent="">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="CheckBoxTheme" parent="Theme.AppCompat">
        <item name="android:colorControlActivated">@color/ship_cove</item>
    </style>
</resources>