<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeMakePass" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorAccent">@color/ship_cove</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Splash" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_layout_splash</item>
    </style>

    <!-- TextInputLayout 기본 테마 -->
    <style name="Theme.TextInputLayout" parent="">
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <!-- TextInputLayout 기본 테마 + 라운드 속성(25) -->
    <style name="Theme.TextInputLayout.Round25" parent="Theme.TextInputLayout">
        <item name="boxCornerRadiusTopStart">25dp</item>
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="boxCornerRadiusBottomEnd">25dp</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
    </style>

    <!-- TextInputLayout 기본 테마 + 라운드 속성(10) -->
    <style name="Theme.TextInputLayout.Round10" parent="Theme.TextInputLayout">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
    </style>

    <!-- TextInputLayout + TextInputEditText로 검색창을 구현할 경우 TextInputLayout에 적용하는 style -->
    <style name="Theme.TextInputLayout.SearchBar" parent="Theme.TextInputLayout">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="background">@color/transparent</item>
        <item name="endIconDrawable">@drawable/baseline_close_24</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <!-- TextInputLayout + TextInputEditText로 검색창을 구현할 경우 TextInputEditText에 적용하는 style -->
    <style name="Theme.TextInputEditText.SearchBar" parent="">
        <item name="android:hint">검색</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:textColorHint">@color/dove_gray_approx</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <!-- TabLayout - Tab Name Text Style. 텍스트 스타일 변경을 위해선 필수 사용. -->
    <style name="Theme.TabLayout.Tab.TextAppearance.Large" parent="">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <!-- TabLayout - Tab Name Text Style. 텍스트 스타일 변경을 위해선 필수 사용. -->
    <style name="Theme.TabLayout.Tab.TextAppearance.Small" parent="">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <!-- MaterialToolbar의 Title Text Style. 타이틀 텍스트 스타일을 변경하기 위해선 필수 사용. -->
    <style name="Theme.Toolbar.Title.Main" parent="">
        <item name="android:textColor">@color/ship_cove</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/font_size_x_large</item>
    </style>

    <!-- TabLayout의 Indicator 스타일, Tab item의 텍스트 스타일을 지정 -->
    <style name="Theme.TabLayout" parent="">
        <item name="tabSelectedTextColor">@color/ship_cove</item>
        <item name="tabIndicatorColor">@color/ship_cove</item>
    </style>

    <!-- TabLayout의 Indicator 스타일, Tab item의 텍스트 스타일을 지정 -->
    <style name="Theme.TabLayout.LargeFont" parent="Theme.TabLayout">
        <item name="tabTextAppearance">@style/Theme.TabLayout.Tab.TextAppearance.Large</item>
    </style>

    <!-- TabLayout의 Indicator 스타일, Tab item의 텍스트 스타일을 지정 -->
    <style name="Theme.TabLayout.SmallFont" parent="Theme.TabLayout">
        <item name="tabTextAppearance">@style/Theme.TabLayout.Tab.TextAppearance.Small</item>
    </style>

    <style name="Theme.CheckBox" parent="Theme.AppCompat">
        <item name="android:colorControlActivated">@color/ship_cove</item>
    </style>

    <style name="Theme.FloatingButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">25dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeTopRight">25dp</item>
    </style>
</resources>