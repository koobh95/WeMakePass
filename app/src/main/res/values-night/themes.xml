<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeMakePass" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorAccent">@color/ship_cove</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Splash" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <!-- TextInputLayout 기본 테마 -->
    <style name="Theme.TextInputLayout" parent="">
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <!-- TextInputLayout 기본 테마 + 라운드 속성(25) -->
    <style name="Theme.TextInputLayout.Round25" parent="Theme.TextInputLayout">
        <item name="boxCornerRadiusTopStart">25dp</item>
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="boxCornerRadiusBottomEnd">25dp</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
    </style>

    <!-- TextInputLayout 기본 테마 + 라운드 속성(10) -->
    <style name="Theme.TextInputLayout.Round10" parent="Theme.TextInputLayout">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
    </style>

    <style name="Theme.TabLayout.Tab.TextAppearance.Large" parent="">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="Theme.CheckBox" parent="Theme.AppCompat">
        <item name="android:colorControlActivated">@color/ship_cove</item>
    </style>
</resources>